{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "codebase_map": {
      "type": "object",
      "properties": {
        "_metadata": {
          "type": "object",
          "properties": {
            "last_updated": { "type": "string", "format": "date-time" },
            "total_files": { "type": "integer", "minimum": 0 }
          }
        }
      },
      "additionalProperties": {
        "type": "string",
        "description": "File path as key, description as value"
      }
    },
    
    "patterns": {
      "type": "object",
      "properties": {
        "categories": {
          "type": "object",
          "properties": {
            "error_handling": {
              "type": "array",
              "items": { "type": "string" }
            },
            "naming": {
              "type": "array",
              "items": { "type": "string" }
            },
            "imports": {
              "type": "array",
              "items": { "type": "string" }
            },
            "testing": {
              "type": "array",
              "items": { "type": "string" }
            },
            "async": {
              "type": "array",
              "items": { "type": "string" }
            },
            "other": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "_metadata": {
          "type": "object",
          "properties": {
            "last_updated": { "type": "string", "format": "date-time" }
          }
        }
      }
    },

    "gotchas": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "category": { "type": "string" },
              "added_at": { "type": "string", "format": "date-time" },
              "related_files": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "required": ["description", "severity"]
          }
        },
        "_metadata": {
          "type": "object",
          "properties": {
            "last_updated": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    
    "attempt_history": {
      "type": "object",
      "properties": {
        "subtasks": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "attempts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "session": { "type": "integer" },
                    "timestamp": { "type": "string", "format": "date-time" },
                    "approach": { "type": "string" },
                    "success": { "type": "boolean" },
                    "error": { "type": ["string", "null"] }
                  },
                  "required": ["timestamp", "approach", "success"]
                }
              },
              "status": {
                "type": "string",
                "enum": ["pending", "in_progress", "completed", "failed", "stuck"]
              }
            }
          }
        },
        "stuck_subtasks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "subtask_id": { "type": "string" },
              "reason": { "type": "string" },
              "escalated_at": { "type": "string", "format": "date-time" },
              "attempt_count": { "type": "integer" }
            },
            "required": ["subtask_id", "reason"]
          }
        },
        "_metadata": {
          "type": "object",
          "properties": {
            "last_updated": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    
    "build_commits": {
      "type": "object",
      "properties": {
        "commits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hash": { "type": "string" },
              "subtask_id": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["hash", "subtask_id"]
          }
        },
        "last_good_commit": { "type": ["string", "null"] },
        "_metadata": {
          "type": "object",
          "properties": {
            "last_updated": { "type": "string", "format": "date-time" }
          }
        }
      }
    }
  }
}
